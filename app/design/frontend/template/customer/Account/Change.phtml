        .change-container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 450px;
            padding: 40px;
            margin: 0 auto;
            margin-top: 50px;
            margin-bottom: 50px;
        }

        h2 {
            color: #2c3e50;
            text-align: center;
            margin-bottom: 30px;
            font-weight: 600;
        }

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

        label {
            display: block;
            color: #566573;
            margin-bottom: 8px;
            font-weight: 500;
            font-size: 14px;
        }

        input {
            width: 100%;
            padding: 12px 36px 12px 16px;
            border: 1px solid #dfe6e9;
            border-radius: 6px;
            font-size: 15px;
            transition: border-color 0.3s, box-shadow 0.3s;
            color: #34495e;
        }

        input:focus {
            outline: none;
            border-color: #3498db;
            box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
        }

        .toggle-password {
            position: absolute;
            right: 12px;
            top: 38px;
            cursor: pointer;
            color: #7f8c8d;
            transition: color 0.2s;
        }

        .toggle-password:hover {
            color: #34495e;
        }

        .error {
            color: #e74c3c;
            font-size: 13px;
            margin-top: 6px;
            min-height: 20px;
        }

        button {
            background-color: #3498db;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 14px 20px;
            font-size: 16px;
            font-weight: 500;
            width: 100%;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        button:hover {
            background-color: #2980b9;
        }

        button:active {
            transform: translateY(1px);
        }

        @media (max-width: 500px) {
            .change-container {
                padding: 25px;
            }

            input {
                padding: 10px 36px 10px 12px;
            }

            button {
                padding: 12px 16px;
            }
        }
    </style>
</head>

<body>

    <div class="change-container">
        <h2>Change Password</h2>
        <form id="changePasswordForm">
            <div class="form-group">
                <label>Old Password</label>
                <input type="password" id="oldPassword">
                <span class="toggle-password">üëÅÔ∏è</span>
                <div class="error" id="oldPasswordError"></div>
            </div>

            <div class="form-group">
                <label>New Password</label>
                <input type="password" id="newPassword">
                <span class="toggle-password">üëÅÔ∏è</span>
                <div class="error" id="newPasswordError"></div>
            </div>

            <div class="form-group">
                <label>Confirm Password</label>
                <input type="password" id="confirmPassword">
                <span class="toggle-password">üëÅÔ∏è</span>
                <div class="error" id="confirmPasswordError"></div>
            </div>

            <button type="button" id="submitBtn">Change Password</button>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Toggle password visibility
            $(".toggle-password").click(function () {
                let input = $(this).prev("input");
                if (input.attr("type") === "password") {
                    input.attr("type", "text");
                } else {
                    input.attr("type", "password");
                }
            });

            $("#submitBtn").click(function () {
                let oldPassword = $("#oldPassword").val().trim();
                let newPassword = $("#newPassword").val().trim();
                let confirmPassword = $("#confirmPassword").val().trim();
                let hasError = false;

                $(".error").text("");

                if (oldPassword === "") {
                    $("#oldPasswordError").text("Old password is required!");
                    hasError = true;
                }

                if (newPassword.length < 6) {
                    $("#newPasswordError").text("New password must be at least 6 characters!");
                    hasError = true;
                }

                if (confirmPassword !== newPassword) {
                    $("#confirmPasswordError").text("Passwords do not match!");
                    hasError = true;
                }

                if (!hasError) {
                    $.ajax({
                        url: "http://localhost/mvc_main/customer/account/changepass",
                        type: "POST",
                        data: {
                            old_password: oldPassword,
                            new_password: newPassword
                        },
                        success: function (response) {
                            try {
                                let data = JSON.parse(response);
                                if (data.success) {
                                    alert("Password changed successfully!");
                                } else {
                                    alert(data.message);
                                }
                            } catch (error) {
                                console.log("Error parsing JSON:", error);
                            }
                        },
                        error: function (xhr) {
                            console.log("Error:", xhr.responseText);
                        }
                    })
                }
            });
        });
    </script>

</body>

</html>